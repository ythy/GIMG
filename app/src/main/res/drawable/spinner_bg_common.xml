<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>

            <item >
                <shape>
                    <corners android:radius="0dp" />
                    <solid android:color="?attr/colorPrimary" />
                </shape>
            </item>

            <item android:bottom="1dp" >
                <shape>
                    <gradient android:angle="90" android:endColor="?attr/colorBackPrimary" android:startColor="?attr/colorBackPrimary" android:type="linear" />
                </shape>
            </item>

            <item android:right="5dp">
                <bitmap android:gravity="center_vertical|right"  android:tint="?attr/colorPrimary" android:src="@drawable/ic_spinner_bg_common" />
            </item>
        </layer-list>
    </item>

</selector>