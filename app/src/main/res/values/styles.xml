<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:textViewStyle">@style/CSTextViewStyle</item>
        <item name="spinnerStyle">@style/CSSpinnerStyle</item>
        <!--<item name="editTextStyle">@style/CSEditTextStyle</item>-->
    </style>

    <style name="CSSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="overlapAnchor">false</item>
        <item name="android:background">@drawable/spinner_bg_common</item>
    </style>

    <style name="CSEditTextStyle">
        <!--<item name="android:background">@drawable/edit_default_background</item>-->
    </style>

    <style name="CSTextViewStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <!--<style name="CSButtonStyle" parent="@style/Widget.MaterialComponents.Button">-->
        <!--<item name="android:layout_width">10dp</item>-->
        <!--<item name="android:layout_height">10dp</item>-->
    <!--</style>-->
    
    <style name="PageWhite" >
	    <item name="android:textSize">16sp</item>	
		<item name="android:textColor">@color/color_white</item>
		<item name="android:background">@drawable/pagenumbg</item>
		<item name="android:paddingTop">1dip</item>
		<item name="android:paddingBottom">1dip</item>
	</style>
</resources>
