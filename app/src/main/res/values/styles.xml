<resources>

    <style name="BaseActivityStyle" >
        <item name="android:background">@drawable/main_content_bg_normal</item>
    </style>

    <style name="BaseTextViewStyle" >
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorFontPrimary</item>
    </style>

    <style name="TextViewSpinner" >
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="CommonImageButtonStyle">
        <item name="android:layout_width">@dimen/image_button_normal</item>
        <item name="android:layout_height">@dimen/image_button_normal</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="BaseButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">?attr/colorFontPrimary</item>
    </style>

    <style name="BaseSpinnerItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:background">?attr/colorBackPrimary</item>
        <item name="android:textColor">?attr/colorFontPrimary</item> <!-- 此处如果不设置，会适用BaseTextViewStyle中的颜色 -->
    </style>

    <style name="BaseSpinnerDropDownItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">?attr/colorFontPrimary</item>
        <item name="android:background">?attr/colorBackPrimary</item>
    </style>

    <style name="BaseSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="overlapAnchor">false</item>
        <item name="android:background">@drawable/spinner_bg_common</item>
    </style>

    <style name="spinnerStyleWithoutArrow" parent="BaseSpinnerStyle">
        <item name="android:background">@drawable/spinner_bg_without_arrow</item>
    </style>

    <style name="BoxSpinnerCombined" >
        <item name="android:background">@drawable/spinner_background</item>
    </style>

    <style name="BaseEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">?attr/colorFontPrimary</item>
    </style>

    <style name="BaseCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">?attr/colorFontPrimary</item>
    </style>

    <style name="EditTextPinYin" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">?attr/colorFontPrimary</item>
        <item name="android:background">@drawable/edit_pinyin</item>
    </style>

    <style name="PageWhite" >
	    <item name="android:textSize">16sp</item>	
		<item name="android:textColor">@color/color_white</item>
		<item name="android:background">@drawable/pagenumbg</item>
		<item name="android:paddingTop">1dip</item>
		<item name="android:paddingBottom">1dip</item>
	</style>


    <!-- 布局类样式 -->
    <style name="LayoutRounding">
        <item name="android:background">@drawable/box_back</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="LayoutRoundingWithPadding" parent="LayoutRounding">
        <item name="android:padding">5dp</item>
    </style>

    <style name="LayoutRowInRounding">
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="LayoutRowInRoundingTop" parent="LayoutRowInRounding">
        <item name="android:background">@drawable/box_top</item>
    </style>

    <style name="LayoutRowInRoundingTopDash" parent="LayoutRowInRounding">
        <item name="android:background">@drawable/box_top_dash</item>
    </style>

    <!-- TextView样式 -->
    <style name="TextViewTitle">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/colorTitle</item>
    </style>

    <!-- ListView 样式 -->
    <style name="ListViewSummary">
        <item name="android:background">@drawable/box_left</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:layout_marginStart">2dp</item>
    </style>

    <style name="ListViewMain">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

</resources>
