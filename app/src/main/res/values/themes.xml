<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:spinnerStyle">@style/BaseSpinnerStyle</item>
        <item name="android:textViewStyle">@style/BaseTextViewStyle</item>
        <item name="android:checkboxStyle">@style/BaseCheckBoxStyle</item>
        <item name="editTextStyle">@style/BaseEditTextStyle</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme.Green" >
        <item name="colorPrimary">@android:color/holo_green_dark</item>
        <item name="colorGridPrimary">@android:color/holo_green_light</item>
        <item name="colorGridSecondary">#D7D544</item>
    </style>

    <style name="AppTheme.Blue" >
        <item name="colorPrimary">@android:color/holo_blue_dark</item>
        <item name="colorGridPrimary">@android:color/holo_blue_light</item>
        <item name="colorGridSecondary">#CE7676</item>
    </style>

    <style name="AppTheme.Orange" >
        <item name="colorPrimary">@android:color/holo_orange_dark</item>
        <item name="colorGridPrimary">@android:color/holo_orange_light</item>
        <item name="colorGridSecondary">#5B5E91</item>
    </style>

</resources>