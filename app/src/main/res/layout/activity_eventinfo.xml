<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BaseActivityStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/btnSave"
                    style="@style/CommonImageButtonStyle"
                    android:background="@drawable/material_done" />

                <ImageButton
                    android:id="@+id/btnDel"
                    style="@style/CommonImageButtonStyle"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/material_delete" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:text="名称" />

                <CheckBox
                    android:id="@+id/cbShowing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="SHOW" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:gravity="left"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:text="排序" />

                <EditText
                    android:id="@+id/etIndex"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:inputType="number" />


            </LinearLayout>


            <EditText
                android:id="@+id/etDetailName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:maxLines="5"
                android:minLines="2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:text="时间" />

            <EditText
                android:id="@+id/etDetailTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:minLines="2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnAdd"
                    style="@style/CommonImageButtonStyle"
                    android:background="@drawable/material_add" />

                <ImageButton
                    android:id="@+id/btnDel2"
                    style="@style/CommonImageButtonStyle"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/material_info" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llImages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:text="内容" />

            <EditText
                android:id="@+id/etDetailContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:minLines="6" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>