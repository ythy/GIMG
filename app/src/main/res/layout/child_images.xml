<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imgDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/btnDel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/delete" 
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/btnAdjust"
            android:layout_toRightOf="@id/btnDel"
            android:layout_marginLeft="20dp"
            style="@style/CommonImageButtonStyle"
            android:background="@drawable/material_info"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/etSeq"
            android:layout_toRightOf="@id/btnAdjust"
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:inputType="number"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:textColor="@color/color_white2"
            android:id="@+id/tvDate"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>