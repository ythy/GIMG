<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginBottom="5dp">
        <ImageButton
            android:id="@+id/btn_add_equipment_bao"
            style="@style/ImageButtonSmall"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/material_add" />
        <ImageButton
            android:id="@+id/btn_add_equipment_armor"
            style="@style/ImageButtonSmall"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/material_add" />
        <ImageButton
            android:id="@+id/btn_add_equipment"
            style="@style/ImageButtonSmall"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/material_add" />
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:cacheColorHint="#00000000"
        android:layout_margin="5dp"
        android:divider="?attr/colorGridSecondary"
        android:dividerHeight="1px"
        android:fastScrollEnabled="true"
        android:id="@+id/lv_equipment">
    </ListView>
</LinearLayout>