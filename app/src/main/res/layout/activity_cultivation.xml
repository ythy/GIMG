<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_skin"
        android:background="@drawable/skin_theme_spring"
        android:padding="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_date"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >
            <Button
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:id="@+id/btn_menu"
                style="@style/ButtonSmall"
                android:text="@string/cultivation_menu"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:id="@+id/btn_nation"
                style="@style/ButtonSmall"
                android:text="@string/cultivation_nation"
                tools:targetApi="lollipop" />
            <Button
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:id="@+id/btn_clan"
                style="@style/ButtonSmall"
                android:text="@string/cultivation_clan"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:id="@+id/btn_list"
                style="@style/ButtonSmall"
                android:text="@string/cultivation_list"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:id="@+id/btn_alliance"
                style="@style/ButtonSmall"
                android:text="@string/cultivation_bang"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:id="@+id/btn_time"
                style="@style/ButtonSmall"
                android:tag="ON"
                android:text="@string/cultivation_stop"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:id="@+id/btn_save"
                style="@style/ButtonSmall"
                android:text="@string/cultivation_save"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:dividerHeight="0px"
                android:id="@+id/lv_history"
                >
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_cultivation"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header_cultivation"
        app:itemTextColor="?attr/colorPrimary"
        app:itemIconPadding="5dp" />
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_cultivation_end"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:menu="@menu/menu_nav_right_cultivation"
        app:itemTextColor="?attr/colorPrimary"
        app:itemIconPadding="5dp" />
</androidx.drawerlayout.widget.DrawerLayout>
