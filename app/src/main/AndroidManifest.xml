<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mx.gillustrated"
    android:versionCode="9"
    android:versionName="5.4.0" >

    <!-- 对外部存储设备的写入权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" >
    </uses-permission>
    <uses-permission android:name="android.permission.GET_CLIPS" />
    <uses-permission android:name="android.permission.READ_CLIPS" />
    <uses-permission android:name="android.permission.WRITE_CLIPS" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.Default"
        android:name=".MyApplication"
        tools:ignore="GoogleAppIndexingWarning,HardcodedDebugMode">
        
         <activity
            android:name="com.mx.gillustrated.activity.MainActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.mx.gillustrated.activity.DetailActivity"
            android:screenOrientation="portrait" >
        </activity>
        
        <activity
            android:name="com.mx.gillustrated.activity.AddCardActivity"
            android:screenOrientation="portrait" >
        </activity>
        
        <activity
            android:name="com.mx.gillustrated.activity.GameListActivity"
            android:screenOrientation="portrait" >
        </activity>  
        
        <activity
            android:name="com.mx.gillustrated.activity.GameInfoActivity"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name="com.mx.gillustrated.activity.EventsActivity"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name="com.mx.gillustrated.activity.EventInfoActivity"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name="com.mx.gillustrated.activity.ImageAdjustActivity"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name=".activity.WebActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>
	
    
        
</manifest>
